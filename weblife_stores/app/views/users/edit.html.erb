<h3>Edit User</h3>

<%= error_messages_for :user %>
<table>
<% form_for(@user) do |f| -%>
  <tr>
    <td>
        <%= f.label :login %>:
    </td>
    <td>
        <%= f.text_field :login %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :email %>:
    </td>
    <td>
      <%= f.text_field :email %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :state %>:
    </td>
    <td>
      <%=select(:user,:state, { "active" => "active", "inactive" => "inactive","deleted"=>"deleted"}) %>
    </td>
  </tr>

  <tr>
    <td>
      <%= submit_tag 'Update' %>-
    </td>
    <td>
        <%=link_to "Back",users_path if current_user%>
    </td>
   </tr>
<% end -%>
</table>
