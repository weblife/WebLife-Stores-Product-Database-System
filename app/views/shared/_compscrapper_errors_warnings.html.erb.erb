<table border="0" cellspacing="10" cellpadding="0" >
  <tr>
    <td colspan="2" >
      <b>Errors and Warnings</b>
    </td>
  </tr>
  <%errors=[]%>
  <%warnings=[]%>
  <%comp_ids_array=[]%>
<%@compscraper_array.each do |comp|%>
  <%comp.valid?%>
 <%comp.errors.each do |field,error|%>
    <%if field=="compscrapper_id"%>
      <%errors.push(error)%>
    <%else%>
      <%warnings.push(error)%>
    <%end%>
  <%end%>
    <%comp_ids_array.push(comp.compscrapper_id)%>
<%end%>
<%if !errors.blank?%>
  <%hash=errors.dup_hash%>
  <%errs=""%>
  <%hash.each {|key, value| errs+="(#{value}) #{key}<br/>" }%>
    <%if !comp_ids_array.blank? && !comp_ids_array.uniq!.blank?%>
      <%errs+="Duplicate ids in same upload not allowed.<br/>"%>
    <%end%>

  <tr>
    <td>
      <b>Errors:</b>
    </td>
    <td>
      &nbsp;
    </td>
  </tr>
  <tr>
    <td>
      <b>&nbsp;</b>
    </td>
    <td>
      <label style="color:red;" ><b><%=errs%></b></label>
    </td>
  </tr>
<%end%>

<%if !warnings.blank?%>
  <%hash=warnings.dup_hash%>
  <%warn=""%>
  <%hash.each {|key, value| warn+="(#{value}) #{key}<br/>" }%>

  <tr>
    <td>
      <b>Warnings:</b>
    </td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td><%=warn%></td>
  </tr>
<%end%>
</table>